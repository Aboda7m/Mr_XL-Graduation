@page "/welcome/{username}"
@inject Mr_XL_Graduation.Services.UserService UserService

<div class="dashboard">
    <h2>Welcome, @fullName!</h2>

    <div class="grid-container">
        <!-- Schedule Panel -->
        <div class="panel">
            <h3>Schedule</h3>
            <p>No schedule available yet.</p>
        </div>

        <!-- Grades Panel -->
        <div class="panel">
            <h3>Grades</h3>
            <p>No grades available yet.</p>
        </div>

        <!-- Student Info Panel -->
        <div class="panel">
            <h3>Student Info</h3>
            <p><strong>ID:</strong> @studentId</p>
            <p><strong>Email:</strong> @email</p>
        </div>

        <!-- Balance Panel -->
        <div class="panel">
            <h3>Balance</h3>
            <p>Your balance is: $0.00</p>
        </div>

        <!-- Payments and Bills Panel -->
        <div class="panel">
            <h3>Payments and Bills</h3>
            <p>No payments due at the moment.</p>
        </div>
    </div>

    <button class="btn" @onclick="LogOut">Logout</button>
</div>

@code {
    [Parameter]
    public string username { get; set; }

    private string fullName { get; set; }
    private string studentId { get; set; }
    private string email { get; set; }

    [Inject]
    private NavigationManager NavigationManager { get; set; }

    protected override void OnInitialized()
    {
        // Get student info based on the username
        var studentInfo = UserService.GetStudentInfo(username);
        if (studentInfo != null)
        {
            fullName = studentInfo.FullName;
            studentId = studentInfo.StudentId;
            email = studentInfo.Email;
        }
        else
        {
            fullName = "Unknown User";
            studentId = "N/A";
            email = "N/A";
        }
    }

    private void LogOut()
    {
        NavigationManager.NavigateTo("/login");
    }
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7f9;
        color: #333;
        margin: 0;
        padding: 20px;
    }

    .dashboard {
        max-width: 1200px;
        margin: 0 auto;
    }

    h2 {
        text-align: center;
        color: #6f2c91; /* Purple accent */
        margin-bottom: 20px;
    }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .panel {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .panel h3 {
            color: #6f2c91; /* Purple accent */
            margin-bottom: 10px;
        }

    .btn {
        background-color: #6f2c91;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 1em;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.3s;
        margin-top: 30px;
        display: block;
        width: 100px;
        text-align: center;
        margin-left: auto;
        margin-right: auto;
    }

        .btn:hover {
            background-color: #5a2475;
            transform: translateY(-2px);
        }

        .btn:active {
            background-color: #4a1d61;
            transform: translateY(0);
        }
</style>
